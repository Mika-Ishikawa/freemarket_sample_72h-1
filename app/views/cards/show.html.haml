= render "layouts/header"
.haikei
  .mypage-container
    .main-content
      .mypage-tab-box2
        .mypage-tab-box2__head
          クレジットカード登録
        .mypage-tab-box2__tabs
        .mypage-tab-box2__content
          .mypage-item__not-found
            .card
              .card_content
                .card_content_text
                  支払い方法
                .card_content_change
                  = form_tag(delete_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
                    %input{ type: "hidden", name: "card_id", value: "" }
                    %button 削除する
              .card_date
                クレジットカード
                %br/
                = "**** **** **** " + @default_card_information.last4
                %br/
                有効期限 
                - exp_month = @default_card_information.exp_month.to_s
                - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                = exp_month + " / " + exp_year
              .card_visa
                = image_tag "/assets/logo-white.png", class: "copyright_logo",size:"49x15"

    .left-content
      .mypage-nav
        .mypage-nav__list
          .mypage-nav__list-item
            = link_to "マイページ", user_path(current_user), class: "hoge"
            %i.fas.fa-chevron-right
          
        .mypage-nav__title
          設定
        .mypage-nav__list
          .mypage-nav__list-item
            = link_to "支払い方法", "/cards/new", class: "hoge"
            %i.fas.fa-chevron-right
          .mypage-nav__list-item
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "hoge"
            %i.fas.fa-chevron-right

= render "layouts/footer"
= render "layouts/camera"
